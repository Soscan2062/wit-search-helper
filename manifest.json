{
  "manifest_version": 2,
 
  "name": "Work in Texas Search Helper",
  "description": "This extensions makes searching the Work in Texas website easier and more robust.",
  "version": "1.3",
  
  "background": {
	"scripts": ["background.js"]
  },
  
  "browser_action": {
   "default_popup": "popup.html"
  },
  
  "icons": { "16": "icon16-2.png",
			"32": "icon32-2.png",
			"48": "icon48-2.png",
			"128": "icon128-2.png" },

  "options_page": "options.html",
  
  "permissions": [
   "activeTab",
   "tabs", 
   "contextMenus",
   "storage"
   ],
   
   "content_scripts": [
	{
		"matches": ["https://wit.twc.state.tx.us/*pageid=BROWSE_POST_BY_TEXT*",
					"https://wit.twc.state.tx.us/*pageid=JS_POSTING_BROWSE_SEARCH*"],
		"js": ["WITEditor.js"]
	}
   ]
}